/*------------ go    产品显示页样式----------------------*/
.show_product{background:#FFF;width:100%;border-bottom:1px solid #bbb;padding:2px;
}
.search_box{width:99%;min-height:500px;border:1px solid #bbb;
}
.pro_search{border-bottom:1px solid #bbb;height:35px;width:100%;line-height:35px;background:#e9f2f4;
}
.pro_search div{margin-left:27px;float:left;
}
.pro_search div select{position:relative;
}

.pro_list{margin:1px;
}
.pro_list table{width:100%;
}
.pro_list table tr.tr_title{width:100%;background:#dfd4b3;
}
.pro_list table tr.tr_title td{color:#0c4b8d;letter-spacing:0.2em;
}
.pro_list table tr td{border:1px solid #bbb;text-align:center;height:25px;
}
.pro_list table tr td.left{text-align:left;
}
.pro_list table tr td.left input{margin-left:10px;
}
.pro_list table tr td input.file{height:23px;border:1px solid #aaa;line-height:23px;
}

.pro_list table tr td.page_search{text-align:right;height:50px;padding-right:30px;
}
.pro_list table tr td.page_search span{margin-right:5px;
}
.pro_list table tr td a{display:inline-block;margin-left:5px;color:#000;
}
.pro_list table tr td a:hover{text-decoration:underline;color:#03C;
}
/*------------ end    产品显示页样式-----------------------*/

/*-------------go 添加商品样式-------------------------------*/
.add_list{width:100%;border-bottom:1px solid #DDD;
}
.add_list table{width:100%;
}
.add_list table tr td{border-bottom:1px solid #DDD;height:30px;
}
.add_list table tr td textarea{width:500px;height:50px;margin-top:5px;
}

/*-------------end 添加商品样式-------------------------------*